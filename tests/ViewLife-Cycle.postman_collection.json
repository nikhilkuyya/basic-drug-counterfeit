							"            <th>Owner</th>",
							"            <th>ProductID</th>",
							"            <th>Shipment</th>",
							"        </tr>",
							"",
							"        {{#each response}}",
							"            <tr>",
							"                <td>{{name}}</td>",
							"                <td>{{serialNo}}</td>",
							"                <td>{{owner}}</td>",
							"                <td>{{productID}}</td>",
							"                <td>{{shipment}}</td>",
							"            </tr>",
							"        {{/each}}",
							"    </table>",
							"`;",
							"// Set visualizer",
							"pm.visualizer.set(template, {",
							"    // Pass the response body parsed as JSON as `data`",
							"    response: pm.response.json().drugs.map(drug => drug.state)",
